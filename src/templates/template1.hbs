<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
    <header>
        <h1>{{title}}</h1>
        <p>{{content}}</p>
        <p>Author: {{author}}</p>
        <p>Created At: {{createdAt}}</p>
    </header>
    
    <main>
        <!-- Section Umum -->
        <section id="general">
            <h2>Informasi Umum</h2>
            <p>{{generalInfo}}</p>
        </section>
        
        <!-- Section Surat Pengantar -->
        <section id="intro">
            <h2>Surat Pengantar</h2>
            <p>{{intro}}</p>
        </section>
        
        <!-- Section Surat Tugas -->
        <section id="assignment">
            <h2>Surat Tugas</h2>
            <p>{{assignment}}</p>
        </section>
        
        <!-- Section Pedoman -->
        <section id="guidelines">
            <h2>Pedoman</h2>
            <p>{{guidelines}}</p>
        </section>
        
        <!-- Section Laporan Hasil -->
        <section id="report">
            <h2>Laporan Hasil</h2>
            <h3>Simpulan dan Rekomendasi</h3>
            <p>{{reportSummary}}</p>
            <h3>Uraian Audit</h3>
            <p>{{auditDetails}}</p>
        </section>
    </main>
    
    <footer>
        <p>{{footer}}</p>
    </footer>
</body>
</html>