<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
    <header>
        <div style="text-align: center;">
            <h2>{{header.organization}}</h2>
            <h3>{{header.unit}}</h3>
            <p>{{header.address}}</p>
            <p>Telp: {{header.phone}}, Fax: {{header.fax}}</p>
            <p>Email: {{header.email}}, website: {{header.website}}</p>
        </div>
    </header>

    <main>
        <!-- Section Nomor Surat -->
        <section id="nomor_surat">
            <p>Nomor: {{nomor_surat}}</p>
            <p>Lampiran: {{lampiran}}</p>
            <p>Hal: {{hal}}</p>
        </section>

        <!-- Section Penerima Surat -->
        <section id="penerima_surat">
            <p>Yth. {{penerima}}</p>
            <p>di {{lokasi_penerima}}</p>
        </section>

        <!-- Section Isi Surat -->
        <section id="isi_surat">
            <p>{{isi_surat}}</p>
        </section>

        <!-- Section Penutup Surat -->
        <section id="penutup_surat">
            <p>{{penutup_surat}}</p>
            <p>{{footer.greeting}}</p>
            <p>{{footer.position}}</p>
            <p>{{footer.signature}}</p>
            <p>{{footer.name}}</p>
        </section>

        <!-- Section Tembusan -->
        <section id="tembusan">
            <p>Tembusan Yth.:</p>
            <ul>
                {{#each tembusan}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </section>

        <!-- Section Layanan Pengaduan -->
        <section id="layanan_pengaduan">
            <p>{{pengaduan.message}}</p>
            <p>{{pengaduan.contact}}</p>
        </section>
    </main>

    <footer>
        <p>{{footer.disclaimer}}</p>
    </footer>
</body>
</html>
